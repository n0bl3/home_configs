syntax on
filetype plugin indent on

set rtp+=~/.vim/bundle/vundle
call vundle#rc()

Bundle 'gmarik/vundle'
Bundle 'bling/vim-airline'
Bundle 'tpope/vim-fugitive'
Bundle 'davidhalter/jedi-vim'

set nocompatible
set expandtab
set hlsearch
set incsearch
set laststatus=2
set nu
set shiftwidth=4
set ignorecase
set tabstop=4
set background=dark
set modeline
